{
  "name": "@algorandfoundation/dp256",
  "version": "0.0.1",
  "description": "Package used to deterministically generate P256 keypairs, using BIP39.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "keywords": [
    "p256",
    "ecdsa",
    "bip39",
    "deterministic",
    "cryptography",
    "webauthn",
    "passkeys"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:check": "eslint src/**/*.ts --max-warnings 0",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "ci": "npm run lint:check && npm run format:check && npm run test && npm run build",
    "dev": "tsc --watch",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/algorandfoundation/deterministic-p256-ts.git"
  },
  "author": "Algorand Foundation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/algorandfoundation/deterministic-p256-ts/issues"
  },
  "homepage": "https://github.com/algorandfoundation/deterministic-p256-ts#readme",
  "dependencies": {
    "@noble/curves": "^1.9.6",
    "@scure/bip39": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "audit-ci": "^6.6.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.5.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}